<!DOCTYPE html>
<html>
<head>

    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">

</head>
<body>



    <svg width="100vw" height="100vh">

        <defs>
            <mask id="mask">


                <circle cx="50%" cy="40%" r="100%" fill="url(#gradient)">

                    <animate id="lightson"
                             attributeName="r"
                             dur="1s"
                             fill="freeze"
                             begin="circle-three.end + 0.1s"
                             values="100%; 0; 0; 82px"
                             keyTimes="0; 0.01; 0.8; 1" />

                </circle>


            </mask>

            <radialGradient id="gradient">
                <stop offset="75%" stop-color="#fff" />
                <stop offset="100%" stop-color="#000" />
            </radialGradient>

        </defs>

        <rect x="0" y="0" width="100%" height="100%" fill="#000" />


        <g mask="url(#mask)">


            <rect x="0" y="0" width="100%" height="100%" fill="#e9e9e9" />

            <g fill="black" text-anchor="middle">

                <text x="50%" y="40%" font-size="5rem">Ooops...</text>
                <text x="50%" y="40%" dy="50px" font-size="2.5rem">Something go wrong</text>
            </g>


            <g fill="black">

                <g font-size="1.2rem" text-anchor="middle">
                    <text x="50%" y="60%">

                        <animate attributeName="opacity"
                                 to="0"
                                 fill="freeze"
                                 dur="0.1s"
                                 begin="lightson.end" />

                    </text>

                    <text x="50%" y="65%">
                        Ana səhifə keçid etmək olar...
                    </text>

                    <animate attributeName="opacity"
                             to="0"
                             fill="freeze"
                             dur="0.1s"
                             begin="lightson.end" />

                </g>

            </g>
            <g text-anchor="middle" fill="black" opacity="0">

                <text x="50%" y="60%">
                    Oh-oh...
                </text>

                <a href="/">
                    <text x="50%" y="65%" style="text-transform: uppercase; text-decoration: underline; fill:inherit;">
                        Ana səhifəyə keçməyi yoxlayın
                    </text>
                </a>
                <animate attributeName="opacity"
                         to="1"
                         dur="0.2s"
                         begin="lightson.end"
                         fill="freeze" />
            </g>

        </g>

    </svg>


    <script>




const circleMask = document.querySelector("#mask circle");


window.addEventListener("mousemove", updateCircleMask);


function updateCircleMask(e) {

  let xCoor = e.x;
  let yCoor = e.y;


  circleMask.setAttribute("cx", xCoor);
  circleMask.setAttribute("cy", yCoor);
}


    </script>


    <style>

        * {
            font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            overflow: hidden;
        }
    </style>
</body>
</html>

