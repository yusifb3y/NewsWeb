@model IEnumerable<Category>;

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/_Layout.cshtml";
}

<style>
    .center {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        height: 100px;
    }

    .a {
        text-decoration: none;
        color: red;
    }
</style>


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered table-dark center table-striped">
    <tr>
        <th>Category Name</th>
        <th>Update</th>
        <th>Isactive</th>
        <th>Save</th>
    
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Home" asp-action="NewsCategory">@item.Name</a></td>
            <td><a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Admin" asp-action="UpdateCategoryModal">Update</a></td>


            <form class="form-control" method="get">
                <input type="hidden" name="id" value="@item.Id" />
                @if (item.IsActive)
                {
                    <td> <input type="checkbox" name="bit" value="1" checked /> @item.IsActive</td>

                }
                @if (!item.IsActive)
                {
                    <td><input type="checkbox" name="bit" value="1" /> @item.IsActive</td>
                }

                <td> <button class="btn btn-danger" asp-controller="Admin" asp-action="TrigCategoryIsActive">Save</button></td>

            </form>


        </tr>
    }

</table>
<a href="/NewCategory" class="btn btn-success btn-lg">Add New Category</a>
