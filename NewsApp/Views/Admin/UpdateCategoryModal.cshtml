@model Category;
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/_Layout.cshtml";
}
<form method="post" class="form-group">
    <h5>@TempData["error"]</h5>
  
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group">
            <input class="form-control-sm" type="text" asp-for="@Model.Name" />
        </div>
        <div class="form-group">
            <input class="form-control-sm" type="text" asp-for="@Model.Priority" />
        </div>

     <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="UpdateCategory">Save</button>
</form>